@model WebApplication1.Models.Product

<h2>Are you sure you want to delete this record?</h2>

<div class="card p-3" style="width: 25rem;">
	<div class="card-body">
		<h5 class="card-title">@Model.Title</h5>
		<h6 class="card-subtitle mb-2 text-body-secondary">@Model.Price $</h6>
		<p class="card-text">@Model.Description</p>
		<div role="group" class="d-flex" >
			<a asp-controller="Product" class="btn btn-outline-primary me-3" asp-action="Index">Go back to list</a>
			<form asp-controller="Product" asp-action="DeleteProduct" method="post">
				<input type="hidden" asp-for="Id" />
				<button class="btn btn-danger" type="submit">Delete</button>
			</form>
		</div>

	</div>
</div>


