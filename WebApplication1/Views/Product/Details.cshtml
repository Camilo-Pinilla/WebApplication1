@model WebApplication1.Models.Product

<section class="p-2 shadow-lg">
	<div class="d-flex mb-3 p-2">
		<strong>Title: </strong>
		<span>@Model.Title</span>
	</div>
	<div class="d-flex mb-3 p-2">
		<strong>Description: </strong>
		<span>@Model.Description</span>
	</div>
	<div class="d-flex mb-3 p-2">
		<strong>Price: </strong>
		<span>@Model.Price</span>
	</div>
</section>
<div>
	<a asp-controller="Product" class="btn btn-primary" asp-action="Index" >Go back to list</a>
	<a asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-outline-primary" asp-action="Edit">Edit</a>
</div>

