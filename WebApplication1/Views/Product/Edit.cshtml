@model WebApplication1.Models.Product

<h2>Edit product</h2>
<form method="post" asp-controller="Product" asp-action="EditProduct">
	<input type="hidden" asp-for="Id" />
	<div class="mb-3">
		<label asp-for="Title">Title</label>
		<input class="form-control" placeholder="Title" type="text" asp-for="Title" />
		<span class="text-danger" asp-validation-for="Title"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Description">Description</label>
		<input class="form-control" placeholder="Description" type="text" asp-for="Description" />
		<span class="text-danger" asp-validation-for="Description"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Price">Price</label>
		<input  placeholder="Price" class="form-control" type="number" asp-for="Price" />
		<span class="text-danger" asp-validation-for="Price"></span>
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Create</button>
	</div>
</form>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial");
}