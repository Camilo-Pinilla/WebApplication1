@if (TempData["Message"] != null && TempData["Status"]?.ToString() == "Success")
{
	<script type="text/javascript">
		const Toast = Swal.mixin({
			toast: true,
			position: 'top-end',
			iconColor: 'white',
			customClass: {
				popup: 'colored-toast',
			},
			showConfirmButton: false,
			timer: 1500,
			timerProgressBar: true,
		})

		Toast.fire({
			icon: 'success',
			title: '@TempData["Message"]',
		})
	</script>
}

